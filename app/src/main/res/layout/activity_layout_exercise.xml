<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LayoutExercise">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:text="Instagram"
            android:textColor="#020202"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="182dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="134dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/img1"
                                tools:srcCompat="@drawable/img1" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:text="Tanjiro"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textStyle="normal" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="136dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/img2"
                                tools:srcCompat="@drawable/img2" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:text="SABITO"
                                android:textAlignment="center"
                                android:textColor="#000000" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="134dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/img3"
                                tools:srcCompat="@drawable/img3" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:text="HIMEJIMA"
                                android:textAlignment="center"
                                android:textColor="#000000" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="131dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/img4" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:text="MITSURI"
                                android:textAlignment="center"
                                android:textColor="#000000" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView17"
                                android:layout_width="143dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/img8" />

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="39dp"
                                android:layout_weight="1"
                                android:text="TOKITO"
                                android:textAlignment="center"
                                android:textColor="#000000" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView18"
                                android:layout_width="140dp"
                                android:layout_height="172dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/img10" />

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:text="NEZUKO CHAN"
                                android:textAlignment="center"
                                android:textColor="#000000" />

                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="match_parent"
                    android:layout_height="587dp"
                    app:srcCompat="@drawable/img11"
                    tools:srcCompat="@drawable/img11" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnButtonExercise"
                        android:layout_width="103dp"
                        android:layout_height="70dp"
                        android:backgroundTint="@android:color/holo_blue_bright"
                        android:text="Like"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/btnLayoutExercise"
                        android:layout_width="124dp"
                        android:layout_height="72dp"
                        android:backgroundTint="@android:color/holo_green_light"
                        android:text="Comment"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="164dp"
                        android:layout_height="69dp"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/holo_red_light"
                        android:text="Share"
                        android:textColor="@color/black" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/img20" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnButtonExercise"
                        android:layout_width="103dp"
                        android:layout_height="70dp"
                        android:backgroundTint="@android:color/holo_blue_bright"
                        android:text="Like"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/btnLayoutExercise"
                        android:layout_width="124dp"
                        android:layout_height="72dp"
                        android:backgroundTint="@android:color/holo_green_light"
                        android:text="Comment"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="164dp"
                        android:layout_height="69dp"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/holo_red_light"
                        android:text="Share"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>